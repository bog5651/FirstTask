<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1c22"
    tools:context=".TimerActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="404dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/relativeLayout"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="214dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_frame" />

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pfs_quare_sans_pro_thin"
            android:paddingTop="4dp"
            android:text="18"
            android:textAlignment="center"
            android:textColor="#ff9a00"
            android:textScaleX="1.2"
            android:textSize="36sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_frame" />

        <TextView
            android:id="@+id/tvMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pfs_quare_sans_pro_thin"
            android:paddingTop="4dp"
            android:text="38"
            android:textAlignment="center"
            android:textColor="#ff9a00"
            android:textScaleX="1.2"
            android:textSize="36sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="89dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_frame" />

        <TextView
            android:id="@+id/tvSec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pfs_quare_sans_pro_thin"
            android:paddingTop="4dp"
            android:text="57"
            android:textAlignment="center"
            android:textColor="#ff9a00"
            android:textScaleX="1.2"
            android:textSize="36sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/twoPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/pfs_quare_sans_pro_thin"
        android:text=":"
        android:textColor="#ff9a00"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/twoPoint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/pfs_quare_sans_pro_thin"
        android:text=":"
        android:textColor="#ff9a00"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="214dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="2dp"
        android:text="ЧАС"
        android:textColor="#57575f"
        android:textSize="10sp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="2dp"
        android:text="МИН"
        android:textColor="#57575f"
        android:textSize="10sp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="2dp"
        android:text="СЕК"
        android:textColor="#57575f"
        android:textSize="10sp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>