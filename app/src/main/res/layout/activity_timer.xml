<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".TimerActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="404dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <fragment
        android:id="@+id/fragmentHour"
        android:name="com.example.firsttask.TimeFragment"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/clock_fragmet" />

    <TextView
        android:id="@+id/twoPoint"
        android:layout_width="6dp"
        android:layout_height="41dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/pfs_quare_sans_pro_thin"
        android:text="@string/two_point"
        android:textColor="@color/tangerine"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <fragment
        android:id="@+id/fragmentSec"
        android:name="com.example.firsttask.TimeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="214dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/clock_fragmet" />

    <TextView
        android:id="@+id/twoPoint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/pfs_quare_sans_pro_thin"
        android:text="@string/two_point"
        android:textColor="@color/slate_grey_two"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <fragment
        android:id="@+id/fragmentMin"
        android:name="com.example.firsttask.TimeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/clock_fragmet" />

    <TextView
        android:id="@+id/Hour"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        android:text="@string/hour"
        android:textColor="#57575f"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHour"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Min"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        android:text="@string/min"
        android:textColor="@color/slate_grey_two"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMin" />

    <TextView
        android:id="@+id/Sec"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/pfs_quare_sans_pro_light"
        android:text="@string/sec"
        android:textColor="#57575f"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentSec" />

</android.support.constraint.ConstraintLayout>